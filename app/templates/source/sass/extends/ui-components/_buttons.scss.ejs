// Button-UI-Component

%btn {
	display: inline-block;
	position: relative;
	font-family: $base-font;
	text-align: center;
	text-decoration: none;<% if (config.get('nikitaCssMixins').indexOf('font-smoothing') != -1) { %>
	@include font-smoothing(on);<%}%>
	cursor: pointer;
	transition: all 0.4s ease-out;
}

%btn:focus,
%btn:hover {
	outline: none; // don't forget to define an alternative styling! 
}

%btn[disabled] {
	cursor: not-allowed;
}

<% if (config.get('formFramework'))
{
%>// Form-Button
%btn-form {
	border: 1px solid $line-color-06;
	padding: 5px 20px;
	@include rem(font-size, 16px);
	@include rem(line-height, 22px);
	text-transform: uppercase;
	color: $text-color-01;
	background-color: $bg-color-06;
	
	.no-touch &:focus,
	.no-touch &:hover,
	.no-touch &:active {
		border: 1px solid $line-color-02;
		color: $text-color-02;
		background-color: $transparent;
	}
}
<%
}
%>
