/**
 * ---------------------------------------------------------------------------------------------------- #
 *
 * Main Stylesheet
 *
 */

// Compass
@import "compass";

<% if (config.get('webfonts'))
{
%>// Webfonts
@import "webfonts";
<%
}
%>
<% if (config.get('browserReset'))
{
%>// Browser-Reset
@import "reset";
<%
}
%>
// Variables
@import "variables/**/*";

<% if (config.get('nikitaCssMixins').length)
{
%>// nikita.css Mixins
<%
	var nikitaCssMixins = config.get('nikitaCssMixins');
	for (var i = 0; i < nikitaCssMixins.length; i++)
	{
%>@import "../../bower_components/nikita.css/mixins/_<%= nikitaCssMixins[i] %>.scss";
<%
	}
}
%>
// Mixins
@import "mixins/**/*";

<% if (config.get('nikitaCssExtends').length)
{
%>// nikita.css Extends
<%
	var nikitaCssExtends = config.get('nikitaCssExtends');
	for (var i = 0; i < nikitaCssExtends.length; i++)
	{
%>@import "../../bower_components/nikita.css/extends/_<%= nikitaCssExtends[i] %>.scss";
<%
	}
}
%>
// Extends
@import "extends/**/*";

<% if (config.get('svgBackgrounds'))
{
%>// SVG Background Extends
@import "svg-bg-extends/**/*";
<%
}
%>
// Basic Formatting
@import "basics";

// All Components
@import "blocks/**/*";
